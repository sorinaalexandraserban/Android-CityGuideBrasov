<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false"
    android:orientation="vertical"
    android:background="@color/greenish"
    tools:context=".UI.UserLandmarksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/visited_landmarks"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/blackish"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/travel" />

        <ListView
            android:id="@+id/lv_visited_landmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/blackish"
            android:dividerHeight="5.0sp" />

        <Button
            android:id="@+id/btn_save_to_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:background="@color/whiteish"
            android:text="@string/save_to_txt"
            android:textColor="@color/blackish"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center" />

    </LinearLayout>

</ScrollView>